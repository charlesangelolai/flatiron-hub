<h4 class="btn-flat cyan accent-4 white-text">Profile Info</h4>
<br><br>
<div class="row">
  <div class="col s5">
    <img style="height: 300px; width: 300px;" src="/images/profile_pic.svg" alt="">
  </div>
  <div class="col s7">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <p>Username: <%= @user.username %></p>
        <p>First Name: <%= @user.first_name %></p>
        <p>Last Name: <%= @user.last_name %></p>
        <p>Email: <%= @user.email %></p>
        <p>Cohort: <%= @user.cohort_id %></p>
        <p>Date Registered: <%= @user.created_at %></p>
      </div>
      <% if current_user == @user %>
        <div class="card-action">
          <a href="/profile/<%= @user.username %>/edit">Edit Profile</a>
        </div>
      <% else %>
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title">Projects</span>
            <ul class="collection">
              <% @user.projects.each do |project| %>
                <a href="/projects/<%= project.id %>" class="collection-item"><%= project.name %></a>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>