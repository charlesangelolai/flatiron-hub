<h4>Sign Up</h4>

<div class="row">
  <form action="/signup" method="post" class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <input id="first_name" type="text" name="user[first_name]" class="validate">
        <label for="first_name">First Name</label>
      </div>
      <div class="input-field col s6">
        <input id="last_name" type="text" name="user[last_name"] class="validate">
        <label for="last_name">Last Name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="username" type="text" name="user[username]" class="validate">
        <label for="username">Username</label>
      </div>
      <div class="input-field col s6">
        <input id="email" type="text" name="user[email]" class="validate">
        <label for="email">Email</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <input id="password" type="password" name="user[password]" class="validate">
        <label for="password">Password</label>
      </div>
      <div class="input-field col s6">
        <input id="confirm_password" type="password" class="validate">
        <label for="confirm_password">Confirm Password</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s6">
        <select type="text" name="user[cohort_id]">
          <option value="" disabled selected>Choose your cohort</option>
          <% @cohorts.each do |cohort| %>
            <option value="<%= cohort.cohort_id %>"><%= cohort.cohort_id %></option>
          <% end %>
        </select>
        <label>Cohort</label>
      </div>
    </div>
    <button type="submit" class="waves-effect waves-light btn-small cyan accent-4">Sign Up</button>
  </form>
</div>

<script>
  $(document).ready(function(){
    $('select').formSelect();
  });
</script>
